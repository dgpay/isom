def function_integral(M,xarr,fxarr):
    i=0
    while i<M :
        xn=random.uniform(0,1)
        xarr.append(xn)
        fx=6*(xn**3)
        fxarr.append(fx)
        i=i+1
    return xarr,fxarr
def wfxarrfuct(w,M,fxarr,wfxarr):
    i=0
    while(i<M):
        wfxarr.append(fxarr[i]*w)
        i=i+1
    return wfxarr

def rectangular(M,wfxarr):
    i=0
    rectangular=0
    while(i<M):
        rectangular=rectangular+wfxarr[i]
        i=i+1
    return rectangular
